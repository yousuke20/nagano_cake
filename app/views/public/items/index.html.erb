<div class="container">
  <div class="row py-4">
    <h1>商品一覧</h1><h2 class="ml-3">(全<%= @items.count %>件)</h2>
  </div>
  <div class="row mx-auto">
    <% @items.each do |item| %>
      <%= link_to item_path(item) do %>
        <div class="card-desk" style="width:15rem">
          <div class="card w-75">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="0" xmlns="http://www.w3.org/2000/svg" preserveAspecRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap">
              <%= attachment_image_tag item, :image, :fill, 100, 100 %>
            </svg>
            <div class="card-body">
              <p class="card-text">
                <%= item.name %>
              </p>
              <p class="card-text">
                ¥ <%= (item.price).to_s(:delimited) %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= paginate @items %>
</div>