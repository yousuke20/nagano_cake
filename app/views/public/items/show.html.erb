  <div class="row mb-3 mx-auto w-75">
    <div class="col-sm">
      <%= attachment_image_tag @item, :image, :fill, 220, 220 %>
    </div>
    <div class="col-sm">
      <div class="row mb-4">
        <h2><%= @item.name %></h2>
      </div>
      <div class="row mb-4">
        <p><%= @item.introduction %></p>
      </div>
      <div class="row">
        ¥ <h5><%= (1.1 * @item.price).round(0) %>(税込)</>
      </div>
    </div>
  </div>
</div>