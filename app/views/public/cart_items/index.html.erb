<div class="container">
  <div class="row mb-4">
    <div class="col">
      <h1>ショッピングカート</h1>
    </div>
    <div class="col text-right">
      <%= link_to "カートを空にする", cart_items_all_path, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered table-hover">
      <thead class="thead-light">
        <tr>
          <th class="col-xs-3">商品名</th>
          <th class="col-xs-2">単価(税込)</th>
          <th class="col-xs-2">数量</th>
          <th class="col-xs-2">小計</th>
          <th class="col-xs-2"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td class="col-xs-3">
              <%= cart_item.item.name %>
            </td>
            <td class="col-xs-2">
              <%= ((cart_item.item.price * 1.1).floor).to_s(:delimited) %>
            </td>
            <td class="col-xs-2">
              <%= form_with model: @cart_item, url: cart_item_path(cart_item), method: :patch, local: true do |f| %>
                <%= f.select :amount, [1,2,3,4,5], {include_blank: '個数選択'} %>
                <%= f.submit '変更', class: "btn btn-success" %>
              <% end %>  
            </td>
            <td class="col-xs-2">
              <%= ((cart_item.item.price * 1.1).floor * (cart_item.amount).to_i).to_s(:delimited) %>
            </td>
            <td class="col-xs-2">
              <%= link_to '削除する', cart_item_path(cart_item), method: :delete, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row mb-4">
    <div class="col">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <div class="col pull-right">
      <table class="table table-bordered">
        <tr>
          <td class="col-xs-2 table-secondary"><strong>合計金額</strong></td>
          <td class="col-xs-2">
            <%= @total_price.to_s(:delimited) %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>
</div>