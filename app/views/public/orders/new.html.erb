<div class="container">
  <h1 class="row mb-4">
    <strong>注文情報入力</strong>
  </h1>
  <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>  
    <div class="col mb-4">  
      <h3>支払い方法</h3>
      <div class="form-check">
        <%= f.radio_button :payment_method, 1, checked: "checked", class: "form-check-input" %>
        <label class="form-check-label">クレジットカード</label>
      </div>
      <div class="form-check">
        <%= f.radio_button :payment_method, 2, class: "form-check-input" %>
        <label class="form-check-label">銀行振込</label>    
      </div>
    </div>
  
    <div class="col mb-5">
      <h3>お届け先</h3>
        <div class="form-check mb-3">
        <%= f.radio_button :address_path, 1, checked: "checked", class: "form-check-input "%>
        <label class="form-check-label">ご自身の住所</label>
          <% address = current_customer.postal_code + current_customer.address + current_customer.last_name + current_customer.first_name %>
          〒 <%= address %>
      </div>
      <div class="form-check mb-3">
        <%= f.radio_button :address_path, 2, class: "form-check-input" %>
        <label class="form-check-label">登録済住所から選択</label>
        <%= f.select :address, options_for_select(@addresses.map do |address|
        [ "〒" + address.postal_code + " " + address.address + " " + address.name]
        end), {include_blank: '配送先を選択'}, class: "form-control" %>
      </div>
      <div class="row mt-3">
        <%= f.submit "確認画面へ進む", class: "btn btn-primary mx-auto" %>
      </div>
    </div>  
  <% end %>
  <%= form_with model: @address, url: orders_create_address_path do |f| %>
    <div class="col">
      <h3>新たな配送先を登録する</h3>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label"><%= f.label :郵便番号（ハイフンなし） %></label>
        <div class="col-sm-4">
          <%= f.text_field :postal_code, class: "form-control", placeholder: "00000000" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label"><%= f.label :住所 %></label>
        <div class="col-sm-6">
          <%= f.text_field :address, class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label"><%= f.label :宛名 %></label>
        <div class="col-sm-4">
          <%= f.text_field :name, class: "form-control", placeholder: "令和道子" %>
        </div>
      </div>
      <div class="row">
        <%= f.submit "配送先を新規登録", class: "btn btn-primary mx-auto" %>
      </div>
    </div>
  <% end %>    
</div>