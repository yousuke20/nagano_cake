<div class="container">
  <%= form_with model: @address, url: address_path(@address) do |f| %>
    <div class="col mb-5">
      <h1>配送先編集</h1>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label"><%= f.label :郵便番号（ハイフンなし） %></label>
        <div class="col-sm-4">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label"><%= f.label :住所 %></label>
        <div class="col-sm-6">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label"><%= f.label :宛名 %></label>
        <div class="col-sm-4">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="col text-right">
        <%= f.submit "変更内容を保存", class: "btn btn-success p-2" %>
      </div>
    </div>
  <% end %> 
</div>