<div class="container">
  <%= form_with model: @address, url: addresses_path, local: true do |f| %>
    <div class="col mb-5">
      <h1>配送先登録 / 一覧</h1>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label"><%= f.label :郵便番号（ハイフンなし） %></label>
        <div class="col-sm-4">
          <%= f.text_field :postal_code, class: "form-control", placeholder: "00000000" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label"><%= f.label :住所 %></label>
        <div class="col-sm-6">
          <%= f.text_field :address, class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label"><%= f.label :宛名 %></label>
        <div class="col-sm-4">
          <%= f.text_field :name, class: "form-control", placeholder: "令和道子" %>
        </div>
      </div>
      <div class="col text-right">
        <%= f.submit "配送先を新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %> 
  <div class="row w-auto">
    <table class="table table-bordered table-hover">
      <thead class="thead-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td>
            <%= address.postal_code %>
          </td>
          <td>
            <%= address.address %>
          </td>
          <td>
            <%= address.name %>
          </td>
          <td class="text-center">
            <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
            <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>