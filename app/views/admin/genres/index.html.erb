<div class="container">
  <div class="row mb-4">
    <h1>ジャンル一覧・追加</h1>
  </div>
  <div class="row mb-4">
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
    <div class="form-group row">
        <label class="col-sm-3">ジャンル名</label>
        <div class="col-sm-6">
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "ジャンル名" %>
        </div>
        <div class="col-sm-3">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
    </div>
    <% end %>
  </div>  
  <div class="row">
    <div class="col-sm-6">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr class="text-center">
            <th>
              ジャンル
            </th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td class="text-center">
                <%= link_to "編集する", edit_admin_genre_path(genre) , class: "btn btn-success mb-2" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>