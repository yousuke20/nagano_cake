<div class="container">
  <div class="row mb-4">
    <h1>注文履歴一覧</h1>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_all.each do |order_all|%>
            <tr>
              <td>
                <%= link_to admin_order_path(order_all) do %>
                  <%= order_all.created_at %>
                <% end %>  
              </td>
              <td>
                <%= order_all.customer.name %>
              </td>
              <td>
                <%= order_all.order_details.amount %>
              </td>
              <td>
                <%= order_all.status %>
              </td>
            </tr>
          <% end %>
         
        </tbody>
      </table>
      <%= paginate @order_all %>
    </div>
  </div>
</div>