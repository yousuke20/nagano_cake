<div class="container ">
  <div class="row mb-4">
    <h1>注文履歴詳細</h1>
  </div>
  <div class="row mb-4">
    <div class="row">
      <label class="col-sm-3">購入者</label>
      <div class="col-sm-9">
        <%= link_to admin_customer_path(@order.customer_id) do %>
          <%= @order.name %>
        <% end %>  
      </div>
    </div>
    <div class="row">
      <label class="col-sm-3">注文日</label>
      <div class="col-sm-9">
        <%= @order.created_at %>
      </div>
    </div>
    <div class="row">
      <label class="col-sm-3">配送先</label>
      <div class="col-sm-9">
        〒 <%= @order.postal_code %><%= @order.address %>
        <%= @order.name %>
      </div>
    </div>
    <div class="row">
      <label class="col-sm-3">支払方法</label>
      <div class="col-sm-9">
        <%= @order.payment_method %>
      </div>
    </div>  
    <div class="row form-inline">
      <label class="col-sm-3">注文ステータス</label>
      <div class="col-sm-9">
        <%= f.select :status, Order.status.keys.to_a, {}, class: "form-control" %>
      </div>
      <%= form_with model: @order, url: admin_order_path, local: true do |f| %>
        <%= f.submit "更新", class: "btn btn-success" %>
      <% end %>
    </div>  
  </div>
  <div class="row">
    <div class="col-sm-9">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @order.each do |order| %>
            <tr>
              <td>
                <%= order.item.name %>
              </td>
              <td>
                <%= order.item.price*1.1 %>
              </td>
              <td>
                <%= order.order_detail.amount %>
              </td>
              <td>
                <%= order.payment %>
              </td>
              <td>
                <%= f.select :making_status, Order_details.making_status.keys.to_a, {}, class: "form-control" %>
              </td>
              <td>
                <%= form_with model: @order_detail, url: admin_order_detail_path, local: true do |f| %>
                  <%= f.submit "更新", class: "btn btn-success" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-3">
      <div class="row">
        <label class="col-sm-6 col-form-label">商品合計</label>
        <div class="col-sm-6">
          <%= Order.all.sum(:payment) %> 円
        </div>
      </div>
      <div class="row">
        <label class="col-sm-6 col-form-label">送料</label>
        <div class="col-sm-6">
          <!--1配送につき全国一律800円-->
          <%= @order.shipping_cost %> 円
        </div>
      </div>
      <div class="row">
        <label class="col-sm-6 col-form-label">請求金額合計</label>
        <div class="col-sm-6">
          <%= Order.all.sum(:payment) + @order.shipping_cost %> 円
        </div>
      </div>
    </div>
  </div>
</div>