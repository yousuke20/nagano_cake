<div class="container">
  <div class="row mb-4">
    <h1>
      <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
    </h1>
  </div>
  <div class="row mb-4">
    <div class="w-75">
      <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
        <div class="row">
          <label class="col-sm-4 col-form-label"><%= f.label :会員id %></label>
          <div class="col-sm-8">
            <%= @customer.id %>
          </div>
        </div>
        <div class="row">
          <label class="col-sm-4 col-form-label"><%= f.label :氏名 %></label>
          <div class="col-sm-4">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
          <div class="col-sm-4">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <label class="col-sm-4 col-form-label"><%= f.label :フリガナ %></label>
          <div class="col-sm-4">
            <%= f.text_field :last_name_kana, class: "form-control" %>
          </div>
          <div class="col-sm-4">
            <%= f.text_field :first_name_kana, class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <label class="col-sm-4 col-form-label"><%= f.label :郵便番号%></label>
          <div class="col-sm-4">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <label class="col-sm-4 col-form-label"><%= f.label :住所 %></label>
          <div class="col-sm-8">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <label class="col-sm-4 col-form-label"><%= f.label :電話番号 %></label>
          <div class="col-sm-4">
            <%= f.text_field :telephone_number, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-4 col-form-label"><%= f.label :メールアドレス %></label>
          <div class="col-sm-4">
            <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-4">会員ステータス</label>
          <div class="col-sm-4">
            <div class="form-check form-check-inline">
              <label>
                <%= f.radio_button :is_active, :有効, class: "form-check-input" %>有効
              </label>
            </div>
            <div class="form-check form-check-inline">
              <label>
                <%= f.radio_button :is_active, :退会, class: "form-check-input" %>退会
              </lavel>
            </div>
          </div>
        </div>
        <div class="form-group text-center">
          <%= f.submit "変更を保存", class: "btn btn-success mb-2" %>
      </div>
      <% end %>
    </div>
  </div>
</div>