<div class="container">
  <div class="row">
    <h2>管理者ログイン</h2>
  </div>
  <div class="row">
    <div class="w-50 mx-auto">
    <%= form_with model: @admin, url: admin_session_path, id: 'new_user', local: true do |f| %>
      <div class="form-group row">
        <label class="col-sm-4"><%= f.label :メールアドレス %></label>
        <div class="col-sm-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-3"><%= f.label :パスワード %></label>
        <div class="col-sm-9">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>
      <div class="form-group text-center">
        <%= f.submit "ログイン", class: "btn btn-primary mb-2" %>
      </div>
    <% end %>
    </div>
  </div>
</div>