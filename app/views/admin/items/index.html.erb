<div class="container">
  <div class="row mb-4">
    <h1 class="col">商品一覧</h1>
    <%= link_to new_admin_item_path do %>
      <div class="row">
        <span class="fas fa-plus-circle fa-3x"></span>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜き価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                <%= item.id %>
              </td>
              <td>
                <%= link_to admin_item_path(item) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td>
                <%= item.price %>
              </td>
              <td>
                <%= item.genre_id %>
              </td>
              <td>
                <%= item.is_active %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>
